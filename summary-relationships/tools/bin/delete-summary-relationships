#!/bin/bash
set -euo pipefail 

[ -f .env ] && source .env
[ ! -f results.json ] && yarn j1 -a "$J1_ACCOUNT" -k "$J1_API_TOKEN" \
  -q "Find (Function|Task|Workload|CodeRepo) THAT (EXECUTES|ACCESSES|ASYNC_NOTIFIES|USES) as rx (Function|Task|Workload|Database|Queue|Channel|CodeRepo) WHERE rx.summaryRelationship = true
  RETURN
  rx._id as _id,
  rx._type as type"

# create bulkDelete.json
node ./tools/bin/mapids.js

yarn j1 -a "$J1_ACCOUNT" -k "$J1_API_TOKEN" -o bulk-delete --relationship -f ./bulkDelete.json 

rm results.json bulkDelete.json